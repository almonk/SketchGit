// Commits to git (cmd alt y)

#import 'library/common.js'

var path = net.khasegawa.getCurrentDirectory(),
    commitMsg = doc.askForUserInput_initialValue_('Commit message', '');

if (commitMsg != null){
  var terminal = SBApplication.application_("Terminal"),
      command = NSString.stringWithFormat("\\cd \"%@\" && \\git commit -m '%@' --interactive; \\exit", path, commitMsg)
  terminal.doScript_in_(command, nil);
}
